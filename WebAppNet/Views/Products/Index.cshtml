@model List<Product>

    <div class="text-danger" asp-validation-summary="All"></div>
<h3>Products</h3>
<br/>

@if(Model!=null)
{
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Brand</td>
                <td>Color</td>
                <td>Size</td>
                <td>Gender</td>
                <td>Price</td>
                <td></td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var prod in Model)
            {
                <tr>
                    <td>@prod.Name</td>
                    <td>@prod.Brand</td>
                    <td>@prod.Color</td>
                    <td>@prod.Size</td>
                    <td>@prod.Gender</td>
                    <td>@(prod.Price.HasValue ? prod.Price.Value.ToString("c") : "")</td>
                    <td><a class="btn btn-link" asp-controller="Products" asp-action="updateProduct" asp-route-prodId="@prod.ProdId">Edit</a></td>
                    <td><a class="btn btn-link" asp-controller="Products" asp-action="deleteProduct" asp-route-prodId="@prod.ProdId">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}


<br/>
<a class="btn btn-primary" asp-controller="products" asp-action="createproduct">Create</a>